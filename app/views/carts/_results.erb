
<%= javascript_include_tag "http://www.google.com/jsapi", "chartkick" %>
<h1>Diet Analysis</h1>

<% h = Hash[@nutrients.zip @total] %>

<div class="row">
  <!-- Column Chart --> 
  <div id="container" style="height: 600px">

    <h3></h3>

    <%= column_chart h,{library: {hAxis: {title: "Vitamins", slantedText:true, slantedTextAngle:60}, vAxis: {title: "Percent Fulfilling RDA"}, title: "Vitamin Analysis", titlePosition:"Out", height:600}} %>
     </div>
     </div>

<br>

     <div class="row">
    <div class="col-md-12">
