
<div class="well" id="food_well">

  <div class="row">
    <div class="col-md-8">
      <h4><%= food.name %></h4>
      <h4><strong>Serving Size</strong> <%= food.serve_size %></h4>
    </div>
    <div class="col-md-4">
      
      <%= form_for cart_item, remote: true do |f| %>
        
        <div class="row">
          <div class="col-md-4">
            <%= f.number_field :quantity, value: cart_item.quantity.to_i, class: "form-control", min: 1 %>
            <%= f.hidden_field :food_id, value: food.id %>
          </div>
          <div class="col-md-8 text-right">
            <div class="btn-group">
              <%= f.submit "Update Quantity", class: "btn btn-primary" %>
              <%= link_to "Remove", cart_item, { data: { confirm: "Are you sure you wish to remove the item '#{cart_item.food.name}' from your plate?" }, method: :delete, remote: true, class: "btn btn-danger" } %>
            </div>
          </div>
        </div>
      
      <% end %>
    </div>
    
  </div>
</div>
