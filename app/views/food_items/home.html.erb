<p id="notice"><%= notice %></p>

<h1>Homepage</h1>
<br>

<%= form_tag(food_items_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Posts" %>
<%= submit_tag "Search" %>
<% end %>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Serve size</th>
      <th>Nut type</th>
      <th>Nut size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @food_items.each do |food_item| %>
      <tr>
        <td><%= food_item.name %></td>
        <td><%= food_item.serve_size %></td>
        <td><%= food_item.nut_type %></td>
        <td><%= food_item.nut_size %></td>
        <td><%= link_to 'Show', food_item %></td>
        <td><%= link_to 'Edit', edit_food_item_path(food_item) %></td>
        <td><%= link_to 'Destroy', food_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Food item', new_food_item_path %>
